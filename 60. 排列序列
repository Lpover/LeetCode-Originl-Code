class Solution {
public:
    long long f[10];
    void factorial(int n){
        f[1]=1;
        for(int i=2;i<=n;i++)f[i]=f[i-1]*i;
    }
    string getPermutation(int n, int k) {
        bool used[20]={0};
        factorial(n);
        string ans="";
        k--;
        for(int i=1;i<n;i++){
            int num=k/f[n-i]+1;
            k=k%f[n-i];
            int jl=0;
            for(int j=1;j<=n;j++){
                if(!used[j]){
                    jl++;
                }
                if(jl>=num&&used[j]==false){
                    used[j]=true;
                    ans+=j+'0';
                    break;
                }
            }
        }
        for(int j=1;j<=n;j++)if(!used[j])ans+=j+'0';
        return ans;
    }
};
